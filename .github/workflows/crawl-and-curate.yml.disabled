name: Daily Crawl and Curate

on:
  schedule:
    # 매일 UTC 18:00 (한국 시간 오전 3시)
    - cron: '0 18 * * *'
  
  # 수동 실행 가능
  workflow_dispatch:

jobs:
  crawl-and-curate:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      - name: Run crawling
        env:
          DATABASE_URL: ${{ secrets.DATABASE_URL }}
        run: |
          echo "Starting crawl at $(date)"
          npm run crawl:all
          echo "Crawl completed at $(date)"
      
      - name: Run AI curation
        env:
          DATABASE_URL: ${{ secrets.DATABASE_URL }}
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          OPENAI_BASE_URL: ${{ secrets.OPENAI_BASE_URL }}
        run: |
          echo "Starting curation at $(date)"
          npm run curate
          echo "Curation completed at $(date)"
      
      - name: Send notification on failure
        if: failure()
        run: |
          echo "❌ Crawl/Curation failed at $(date)"
          # 여기에 Slack/Discord/Email 알림 추가 가능
